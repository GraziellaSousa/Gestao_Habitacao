<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Propriedades</title>
    <style>
        /* Reset de estilos */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Estilo geral da página */
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f4f4f9;
        }

        /* Menu de navegação */
        nav {
            background-color: #333;
            padding: 10px;
            text-align: center;
        }

        nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
        }

        nav a:hover {
            color: #f0f0f0;
        }

        /* Título da página */
        h1 {
            text-align: center;
            margin: 20px 0;
            color: #333;
        }

        /* Botão de cadastrar propriedade */
        .btn-cadastrar {
            display: block;
            width: 200px;
            margin: 20px auto;
            padding: 10px;
            text-align: center;
            background-color: #4CAF50;
            color: white;
            font-size: 1.2em;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-cadastrar:hover {
            background-color: #45a049;
        }

        /* Container de cards */
        .propriedades-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            /* Cards responsivos */
            gap: 20px;
            justify-items: center;
            margin-top: 20px;
        }

        /* Card de propriedade */
        .card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 350px;
            transition: transform 0.3s ease-in-out;
        }

        /* Efeito de hover no card */
        .card:hover {
            transform: translateY(-10px);
        }

        /* Imagem do card */
        .card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        /* Conteúdo do card */
        .card-content {
            padding: 15px;
        }

        .card-content h3 {
            font-size: 1.2em;
            color: #333;
            margin-bottom: 10px;
        }

        .card-content p {
            font-size: 0.9em;
            color: #555;
            margin-bottom: 10px;
        }

        .card-content .price {
            font-size: 1.1em;
            font-weight: bold;
            color: #2c3e50;
        }

        /* Botão de editar */
        .btn-editar {
            display: block;
            width: 100%;
            margin-top: 10px;
            padding: 10px;
            text-align: center;
            background-color: #f39c12;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-editar:hover {
            background-color: #e67e22;
        }

        /* Botão de deletar */
        .btn-deletar {
            display: block;
            width: 100%;
            margin-top: 10px;
            padding: 10px;
            text-align: center;
            background-color: #e74c3c;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-deletar:hover {
            background-color: #c0392b;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .propriedades-container {
                grid-template-columns: 1fr 1fr;
                /* Duas colunas para telas menores */
            }
        }

        @media (max-width: 480px) {
            .propriedades-container {
                grid-template-columns: 1fr;
                /* Uma coluna para telas pequenas */
            }
        }
    </style>
</head>

<body>

    <!-- Menu de Navegação -->
    <nav>
        <a href="/Propriedades">Propriedades</a>
        <a href="/Contratos">Contratos</a>
        <a href="/Pagamentos">Pagamentos</a>
    </nav>

    <h1>Lista de Propriedades</h1>

    <!-- Botão de Cadastrar Propriedade -->
    <a href="/Propriedades/Cadastrar" class="btn-cadastrar">Cadastrar Propriedade</a>

    <!-- Container para exibir as propriedades -->
    <div class="propriedades-container">
        <% propriedades.forEach(function(propriedade) { %>
            <div class="card">
                <img src="<%= propriedade.imagem_url %>" alt="Imagem da Propriedade">
                <div class="card-content">
                    <h3>
                        <%= propriedade.endereco %> - <%= propriedade.tipo %>
                    </h3>
                    <p><strong>Quartos:</strong>
                        <%= propriedade.quartos %> | <strong>Banheiros:</strong>
                            <%= propriedade.banheiro %>
                    </p>
                    <p><strong>Disponibilidade:</strong>
                        <%= propriedade.disponivel ? "Disponível" : "Indisponível" %>
                    </p>
                    <p class="price">R$<%= propriedade.aluguel %> / mês</p>

                    <!-- Botão de Alugar -->
                    <a href="/Contratos/Cadastrar/<%= propriedade._id %>">
                        <button class="btn-alugar">Alugar</button>
                    </a>
                    
                    <!-- Botão de editar -->
                    <a href="/Propriedades/Editar/<%= propriedade._id %>">
                        <button class="btn-editar">Editar</button>
                    </a>

                    <!-- Botão de excluir -->
                    <a href="/Propriedades/Excluir/<%= propriedade._id %>">
                        <button class="btn-deletar">Deletar</button>
                    </a>

                </div>
            </div>
            <% }) %>
    </div>

</body>

</html>